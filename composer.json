{
    "name": "drjele/doctrine-type",
    "type": "library",
    "description": "Doctrine type",
    "keywords": [
        "doctrine",
        "type"
    ],
    "homepage": "https://gitlab.com/drjele-doctrine/type",
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian Jeledintan",
            "email": "adrian.jeledintan@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "doctrine/dbal": "^2.0|^3.0"
    },
    "require-dev": {
        "drjele/symfony-phpunit": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.3",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Drjele\\Doctrine\\Type\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drjele\\Doctrine\\Type\\Test\\": "tests/"
        }
    },
    "scripts": {
        "install-hooks": [
            "[ $COMPOSER_DEV_MODE -eq 1 ] && rm -rf .git/hooks && ln -s ../scripts/git_hooks .git/hooks || exit 0"
        ],
        "post-install-cmd": [
            "@install-hooks"
        ],
        "post-update-cmd": [
            "@install-hooks"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "extra": {
        "exclude": [
            "/scripts",
            "/tests",
            "/.php-cs-fixer.dist.php",
            "/.php_cs.dist",
            "/phpcs.xml.dist",
            "/phpunit.xml.dist"
        ]
    }
}
